{
    "id": "urn:version",
    "name": "MyLampThing",
    "description": "Valid TD demonstrating how to use version with additional fields",
    "securityDefinitions": {
        "basic_sc": {
            "scheme": "basic",
            "in": "header"
        }
    },
    "security": ["basic_sc"],
    "properties": {
        "status": {
            "type": "string",
            "forms": [
                {
                    "href": "https://mylamp.example.com/status"
                }
            ]
        }
    },
    "actions": {
        "toggle": {
            "forms": [
                {
                    "href": "https://mylamp.example.com/toggle"
                }
            ]
        }
    },
    "events": {
        "overheating": {
            "data":{"type": "string"},
            "forms": [
                {
                    "href": "https://mylamp.example.com/oh",
                    "subProtocol": "longpoll"
                }
            ]
        }
    },
    "version": {
        "instance": "1.2.1",
        "xyz:firmware": "0.9.1",
        "xyz:hardware": "1.0"
    }
}