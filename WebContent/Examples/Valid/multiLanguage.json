{
    "id": "urn:multilanguage",
    "name": "MyLampThing",
    "description": "Valid TD showing multiple language support",
    "descriptions": {
        "en": "Human readable information.",
        "de": "Menschenlesbare Informationen.",
        "ja": "人間が読むことができる情報",
        "zh-Hans": "人们可阅读的信息",
        "zh-Hant": "人們可閱讀的資訊"
    },
    "securityDefinitions": {
        "basic_sc": {
            "scheme": "basic",
            "in": "header"
        }
    },
    "security": ["basic_sc"],
    "properties": {
        "on": {
            "title": "On/Off",
            "titles": {
                "en": "On/Off",
                "de": "An/Aus",
                "ja": "オンオフ",
                "zh-Hans": "开关",
                "zh-Hant": "開關"
            },
            "type": "boolean",
            "forms": [{
                "href": "https://mylamp.example.com/status"
            }]
        }
    },
    "actions": {
        "fade": {
            "title": "Fade in/out",
            "description": "Smooth fade in and out animation.",
            "input": {
                "type": "object",
                "properties": {
                    "from": {
                        "title": "from",
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "to": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "duration": {
                        "type": "number"
                    }
                },
                "required": [
                    "to",
                    "duration"
                ]
            },
            "output": {
                "type": "string"
            },
            "forms": [{
                "href": "http://mytemp.example.com:5683/fade"
            }]
        }
    }
}