    "is-complex": true,
    "also":["well-known-operation-types-only"],
    "type": "object",
    "properties": {
        "properties": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/property_element"
            }
        }
    },
    "additionalProperties": true,
    "$defs": {
        "property_element": {
            "type": "object",
            "properties": {
                "forms": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/form_element"
                    }
                }
            },
            "required": [
                "forms"
            ],
            "additionalProperties": true
        },
        "form_element": {
            "type": "object",
            "if": {
                "required": ["op"],
                "properties": {
                    "op": {
                        "anyOf": [{
                                "type": "string",
                                "enum": [
                                    "writeproperty"
                                ]
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "writeproperty"
                                    ]
                                }
                            }
                        ]
                    }
                }
            },
            "then": {
                "const": "td-vocab-op--Form_writeproperty=pass"
            }
        },
        "url": {
            "type": "string"
        }
    }
}
